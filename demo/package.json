{
    "name": "awsm-renderer",
    "version": "0.1.0",
    "license": "(MIT OR Apache-2.0)",
    "scripts": {
        "build": "npm run clean && npm run build:css && cross-env BUILD_MODE=release rollup --bundleConfigAsCjs --config rollup.js",
        "prod-patch": "node ./prod-patch.js",
        "start": "npm run clean && npm run build:css && run-p watch:css _dev",
        "build:css": "postcss src/styles/main.css --output public/css/main.css",
        "watch:css": "npm run build:css -- --watch",
        "clean": "rimraf ./public/wasm && rimraf ./public/css",
        "_dev": "cross-env BUILD_MODE=dev rollup --bundleConfigAsCjs --config rollup.js --watch"
    },
    "dependencies": {
        "@wasm-tool/rollup-plugin-rust": "^2.3.1"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.12",
        "cross-env": "^7.0.3",
        "cssnano": "^5.1.13",
        "dotenv": "^16.0.3",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.18",
        "postcss-cli": "^10.0.0",
        "postcss-import": "^15.0.0",
        "postcss-reporter": "^7.0.5",
        "postcss-url": "^10.1.3",
        "rimraf": "^3.0.2",
        "rollup": "^3.1.0",
        "rollup-plugin-inject-process-env": "^1.3.1",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-serve": "^2.0.1",
        "tailwindcss": "^3.1.8"
    }
}
